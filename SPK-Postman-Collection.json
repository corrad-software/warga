{
  "info": {
    "name": "SPK - Citizenship Management System",
    "description": "Complete API collection for Sistem Pengurusan Kewarganegaraan",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"applicant@example.com\",\n  \"name\": \"John Doe\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data.token) {",
                  "  pm.environment.set('auth_token', response.data.token);",
                  "  pm.environment.set('user_id', response.data.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"applicant@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Applications",
      "item": [
        {
          "name": "Create Application",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data.application) {",
                  "  pm.environment.set('application_id', response.data.application.id);",
                  "  pm.environment.set('application_number', response.data.application.applicationNumber);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"BORANG_H\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/applications",
              "host": ["{{base_url}}"],
              "path": ["api", "applications"]
            }
          }
        },
        {
          "name": "List Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications",
              "host": ["{{base_url}}"],
              "path": ["api", "applications"]
            }
          }
        },
        {
          "name": "Get Application",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}"]
            }
          }
        },
        {
          "name": "Update Application",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"formData\": {\n    \"fullName\": \"John Doe\",\n    \"dateOfBirth\": \"1990-01-01\",\n    \"placeOfBirth\": \"Kuala Lumpur\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}"]
            }
          }
        },
        {
          "name": "Submit Application (Transition)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"toStatus\": \"SUBMITTED\",\n  \"notes\": \"Application submitted\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}/transition",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}", "transition"]
            }
          }
        },
        {
          "name": "Get Valid Transitions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}/transitions",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}", "transitions"]
            }
          }
        },
        {
          "name": "Get Workflow History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}/history",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}", "history"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data.payment) {",
                  "  pm.environment.set('payment_id', response.data.payment.id);",
                  "  pm.environment.set('payment_number', response.data.payment.paymentNumber);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"applicationId\": \"{{application_id}}\",\n  \"method\": \"ONLINE_BANKING\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments",
              "host": ["{{base_url}}"],
              "path": ["api", "payments"]
            },
            "description": "Creates a payment for an application. Amount is auto-calculated based on application type."
          }
        },
        {
          "name": "List Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments?applicationId={{application_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "payments"],
              "query": [
                {
                  "key": "applicationId",
                  "value": "{{application_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Payment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/payments/{{payment_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "{{payment_id}}"]
            }
          }
        },
        {
          "name": "Verify Payment (Officer)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"COMPLETED\",\n  \"transactionId\": \"TXN-12345\",\n  \"notes\": \"Payment verified by officer\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/{{payment_id}}/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "{{payment_id}}", "verify"]
            },
            "description": "Officers only. Verifies a payment as COMPLETED or marks as FAILED."
          }
        },
        {
          "name": "Refund Payment (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Application rejected, refunding payment\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/{{payment_id}}/refund",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "{{payment_id}}", "refund"]
            },
            "description": "Admins only. Processes a refund for a completed payment."
          }
        }
      ]
    },
