# ============================================
# DATABASE
# ============================================
DATABASE_URL="mysql://username:password@localhost:3306/warga_db"

# ============================================
# APPLICATION
# ============================================
NODE_ENV="development"
APP_URL="http://localhost:3000"
APP_NAME="Sistem Pengurusan Kewarganegaraan (SPK)"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
SESSION_SECRET="your-session-secret-change-this"
PASSWORD_SALT_ROUNDS="10"

# Encryption key for sensitive data (biometric, etc.)
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR="./storage/uploads"
MAX_FILE_SIZE="10485760" # 10MB in bytes

# Document storage paths
DOCUMENT_STORAGE_PATH="./storage/documents"
CERTIFICATE_STORAGE_PATH="./storage/certificates"
BIOMETRIC_STORAGE_PATH="./storage/biometric"

# ============================================
# EMAIL CONFIGURATION
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"
EMAIL_FROM="noreply@spk.gov.my"
EMAIL_FROM_NAME="SPK - Sistem Pengurusan Kewarganegaraan"

# ============================================
# SMS CONFIGURATION (Optional)
# ============================================
SMS_PROVIDER="twilio" # or "local-gateway"
SMS_API_KEY="your-sms-api-key"
SMS_API_SECRET="your-sms-api-secret"
SMS_FROM_NUMBER="+60123456789"

# ============================================
# OCR SERVICE (Optional - for future integration)
# ============================================
OCR_ENABLED="false"
OCR_PROVIDER="tesseract" # or "google-vision", "aws-textract"
OCR_API_KEY="your-ocr-api-key"
OCR_CONFIDENCE_THRESHOLD="0.8"

# ============================================
# PAYMENT GATEWAY
# ============================================
PAYMENT_ENABLED="true"
PAYMENT_GATEWAY="stripe" # or "fpx", "ipay88"

# Stripe (if using Stripe)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# FPX / iPay88 (if using local Malaysian gateway)
PAYMENT_MERCHANT_CODE="your-merchant-code"
PAYMENT_MERCHANT_KEY="your-merchant-key"
PAYMENT_GATEWAY_URL="https://payment-gateway.example.com"

# Default fees
APPLICATION_FEE_BORANG_H="1000.00" # RM 1000.00
APPLICATION_FEE_BORANG_G="500.00"  # RM 500.00
CURRENCY="MYR"

# ============================================
# BIOMETRIC SERVICE (Optional - for future integration)
# ============================================
BIOMETRIC_ENABLED="false"
BIOMETRIC_DEVICE_TYPE="fingerprint-scanner"
BIOMETRIC_QUALITY_THRESHOLD="70" # Minimum quality score (0-100)

# ============================================
# WORKFLOW & NOTIFICATIONS
# ============================================
# Enable automatic notifications
NOTIFICATIONS_ENABLED="true"
NOTIFICATION_CHANNELS="email,sms,system"

# SLA Settings (in hours)
SLA_DOCUMENT_REVIEW="48"
SLA_APPLICATION_APPROVAL="168" # 7 days
SLA_CERTIFICATE_ISSUANCE="24"

# ============================================
# AUDIT & LOGGING
# ============================================
AUDIT_LOG_ENABLED="true"
LOG_LEVEL="info" # debug, info, warn, error

# ============================================
# CORS & SECURITY
# ============================================
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX="100" # requests per window
RATE_LIMIT_WINDOW="15" # minutes

# ============================================
# CONSULATE SETTINGS
# ============================================
DEFAULT_CONSULATE_LOCATION="Kuala Lumpur"
CONSULATE_WORKING_HOURS="09:00-17:00"
CONSULATE_WORKING_DAYS="1,2,3,4,5" # Monday-Friday

# ============================================
# DEVELOPMENT/DEBUG
# ============================================
DEBUG="false"
SEED_DATABASE="false" # Set to true to seed initial data
